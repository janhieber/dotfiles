# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=~/.config/i3blocks/dispatcher
separator_block_width=15
markup=none


[playerctl]
instance=previous
command=~/.config/i3blocks/blocks/playerctl
interval=once
separator=false

[playerctl]
instance=play-pause
command=~/.config/i3blocks/blocks/playerctl
interval=once
separator=false

[playerctl]
instance=next
command=~/.config/i3blocks/blocks/playerctl
interval=once


[disk]
label=/:
instance=/
interval=30
separator=false

[disk]
label=/ssd:
instance=/ssd
interval=30

[wifi]
label=WLAN:
instance=wlp3s0
interval=10
signal=12

[battery]
label=BAT:
interval=15

[temperature]
label=TEMP:
interval=10

[memory]
label=MEM:
interval=10

[cpu_usage]
label=CPU:
interval=-2
min_width=CPU: 100%

[load_average]
label=LOAD:
interval=2

[time]
command=date '+%a %d. %b %H:%M'
interval=20

