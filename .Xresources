!! xft settings
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
Xft.dpi: 96

!! urxvt setting
urxvt.perl-ext:
urxvt.font: xft:monospace:pixelsize=12
urxvt.scrollBar: false
urxvt.urgentOnBell: true
urxvt.title: terminal
urxvt*cursorUnderline: true
!! urxvt url matcher
urxvt.perl-ext-common: default,matcher
urxvt.url-launcher: /usr/bin/xdg-open
urxvt.matcher.button: 1
urxvt.keysym.C-Delete: perl:matcher:last
urxvt.keysym.M-Delete: perl:matcher:list
urxvt.internalBorder: 2
urxvt*pointerBlank: true

!! zenburn colors
*background: #3f3f3f
*foreground: #dcdccc
*color0: #3f3f3f
*color1: #cc9393
*color2: #7f9f7f
*color3: #d0bf8f
*color4: #6ca0a3
*color5: #dc8cc3
*color6: #93e0e3
*color7: #dcdccc
*color8: #000000
*color9: #dca3a3
*color10: #bfebbf
*color11: #f0dfaf
*color12: #8cd0d3
*color13: #dc8cc3
*color14: #93e0e3
*color15: #ffffff

!! rofi colors
rofi.color-enabled: true
!                  bg       border   separator
rofi.color-window: #3f3f3f, #222222, #dcdccc
!                  bg       fg       bg-alt   hl-bg    hl-fg
rofi.color-normal: #3f3f3f, #dcdccc, #383838, #4f4f4f, #ffffef
rofi.color-active: #4c7073, #dcdccc, #366060, #5c888b, #ffffef
rofi.color-urgent: #8c5353, #dcdccc, #7c4343, #9c6363, #ffffef

rofi.font: Sans 13
rofi.padding: 40
rofi.lines: 20
rofi.separator-style: solid
rofi.hide-scollbar: true
rofi.scrollbar-width: 0


